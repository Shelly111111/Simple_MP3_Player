                        </Canvas>
                    </Border>
                    <Track x:Name="PART_Track" Grid.Row="1">
                        <Track.DecreaseRepeatButton>
                            <RepeatButton Command="{x:Static Slider.DecreaseLarge}" Height="4.0" Style="{StaticResource RepeatButtonTransparent}" Background="#CC00F3FF"/>
                        </Track.DecreaseRepeatButton>
                        <Track.IncreaseRepeatButton>
